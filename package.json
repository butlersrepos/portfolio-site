{
  "name": "nodejs-portfolio-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.12.3",
    "compression": "~1.6.2",
    "cp": "~0.2.0",
    "ejs": "*",
    "errorhandler": "^1.3.5",
    "express": "^4.12.3",
    "jquery": "^3.1.0",
    "lodash": "^4.17.4",
    "method-override": "^2.3.2",
    "mkdirp": "~0.5.1",
    "moment": "~2.5.1",
    "morgan": "^1.5.2",
    "node-sass": "~3.10.1",
    "npm-run-all": "~3.1.1",
    "redux": "^3.6.0",
    "riot": "^3.0.2",
    "riot-route": "^3.0.2",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-riot": "^0.4.3",
    "rollup-plugin-scss": "^0.2.0",
    "serve-favicon": "^2.2.0",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "bower": "~1.3.12",
    "browser-sync": "~2.17.0",
    "del": "~1.1.1",
    "jshint-stylish": "~1.0.0",
    "lodash": "^4.15.0",
    "nodemon": "~1.10.2",
    "purecss": "^0.6.0",
    "require-dir": "~0.1.0",
    "rollup": "^0.34.10",
    "rollup-analyzer": "~1.0.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "~3.2.2",
    "stream-series": "^0.1.1"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run rollup & npm run build-imgs & npm run build-fonts",
    "build-imgs": "mkdirp dist/imgs && cp -r src/imgs/* dist/imgs/",
    "build-fonts": "mkdirp dist/fonts && cp -r src/fonts/* dist/fonts/",
    "rollup": "rollup --config rollup.config.js",
    "rollup-watch": "rollup --config rollup.config.js --watch",
    "predeploy": "git pull && forever stop mainServer.js &",
    "deploy": "npm install && npm build",
    "postdeploy": "forever start mainServer.js",
    "start": "npm run build && node mainServer.js",
    "server": "nodemon mainServer.js --watch mainServer.js --watch views/ --watch routes/",
    "browser-sync": "browser-sync start --config bs-config.js",
    "dev": "npm-run-all build && npm-run-all --parallel server browser-sync rollup-watch"
  }
}
