{
  "name": "nodejs-portfolio-site",
  "version": "0.0.3",
  "private": true,
  "dependencies": {
    "body-parser": "^1.12.3",
    "consolidate": "^0.12.1",
    "cp": "~0.2.0",
    "ejs": "*",
    "errorhandler": "^1.3.5",
    "express": "^4.12.3",
    "jade": "^1.9.2",
    "jquery": "^3.1.0",
    "method-override": "^2.3.2",
    "mkdirp": "~0.5.1",
    "moment": "~2.5.1",
    "morgan": "^1.5.2",
    "serve-favicon": "^2.2.0"
  },
  "devDependencies": {
    "bower": "~1.3.12",
    "browser-sync": "~2.17.0",
    "del": "~1.1.1",
    "jshint-stylish": "~1.0.0",
    "lodash": "^4.15.0",
    "nodemon": "~1.10.2",
    "purecss": "^0.6.0",
    "require-dir": "~0.1.0",
    "rollup": "^0.34.10",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "stream-series": "^0.1.1"
  },
  "scripts": {
    "build": "npm run build-js & npm run build-css & npm run build-imgs & npm run build-fonts",
    "build-imgs": "mkdirp dist/imgs && cp -r src/imgs/* dist/imgs/",
    "build-fonts": "mkdirp dist/fonts && cp -r src/fonts/* dist/fonts/",
    "build-js": "rollup --config rollup.config.js",
    "build-css": "node-sass src/scss/bundled.scss --output dist/css",
    "predeploy": "git pull && forever stop mainServer.js &",
    "deploy": "npm install && npm build",
    "postdeploy": "forever start mainServer.js",
    "start": "npm run build && node mainServer.js",
    "server": "nodemon mainServer.js --watch mainServer.js --watch views/ --watch routes/",
    "dev": "npm run build && npm run server & sleep 2 && browser-sync start --proxy 'http://localhost:3000' --port 3001 --files 'dist/**/*.*'",
    "watch-css": "node-sass src/scss/bundled.scss --output dist/css --watch"
  }
}
